<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.flybits.concierge.videoplayer.MediaView
            android:id="@+id/flybits_banner_link_mediaView"
            android:layout_width="@dimen/flybits_banner_width_image"
            android:layout_height="@dimen/flybits_banner_height_image"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/flybits_banner_link_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flybits_banner_link_mediaView"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/flybits_banner_link_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flybits_banner_link_mediaView"
            app:layout_constraintTop_toBottomOf="@+id/flybits_banner_link_header" />

    <com.flybits.concierge.utils.EllipsizeSpannableTextView
            android:id="@+id/flybits_banner_link_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flybits_banner_link_mediaView"
            app:layout_constraintTop_toBottomOf="@+id/flybits_banner_link_title"
            tools:text="Hello World" />

</androidx.constraintlayout.widget.ConstraintLayout>