<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <TextView
                android:text="Accounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accounts"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="@+id/header"
                app:layout_constraintTop_toBottomOf="@+id/header" android:layout_marginTop="8dp"/>
        <TextView
                android:text="Chequing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_chequing"
                app:layout_constraintTop_toBottomOf="@+id/accounts" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/accounts" android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="$200.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/amount_chequing"
                app:layout_constraintTop_toBottomOf="@+id/text_chequing"
                app:layout_constraintStart_toStartOf="@+id/text_chequing"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintEnd_toEndOf="parent"/>
        <View
                android:id="@+id/divider_chequing"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/amount_chequing"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/amount_chequing"/>

        <TextView
                android:text="Savings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_savings"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/divider_chequing" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/accounts" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="$12.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/amount_savings"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/text_savings"
                app:layout_constraintStart_toStartOf="@+id/text_savings" app:layout_constraintEnd_toEndOf="parent"/>
        <View
                android:id="@+id/divider_savings"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/amount_savings"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/amount_savings"/>

        <TextView
                android:text="Credit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_credit"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/divider_savings" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/accounts" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="$12,000.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/amount_credit"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/text_credit"
                app:layout_constraintStart_toStartOf="@+id/text_credit" app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="Investments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/investments"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintTop_toBottomOf="@+id/amount_credit"
                app:layout_constraintStart_toStartOf="@+id/accounts" android:layout_marginTop="16dp"/>

        <TextView
                android:text="Mutual Fund A"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_mutual_fund_a"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/investments" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/investments" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="$13.59"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/amount_mutual_fund_a"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/text_mutual_fund_a"
                app:layout_constraintStart_toStartOf="@+id/text_mutual_fund_a" app:layout_constraintEnd_toEndOf="parent"/>
        <View
                android:id="@+id/divider_mutual_fund_a"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/amount_mutual_fund_a"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/amount_mutual_fund_a"/>

        <TextView
                android:text="401K"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_401k"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/divider_mutual_fund_a" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/investments" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="$15,581.31"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/amount_401k"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/text_401k" app:layout_constraintStart_toStartOf="@+id/text_401k"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="Insights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/insights"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintTop_toBottomOf="@+id/amount_401k"
                app:layout_constraintStart_toStartOf="@+id/accounts" android:layout_marginTop="16dp"/>

        <TextView
                android:id="@+id/insights2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insights For 2 Phase"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="@+id/accounts"
                app:layout_constraintTop_toBottomOf="@+id/text_picked_for_you" android:layout_marginTop="16dp" />

        <TextView
                android:text="Picked For You"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_picked_for_you"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/insights" android:paddingTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/insights" android:paddingStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/text_picked_for_you2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Picked For You with IDP"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/insights"
                app:layout_constraintTop_toBottomOf="@+id/insights2" />

        <TextView
                android:id="@+id/text_picked_for_you3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Picked For You with Error"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/insights"
                app:layout_constraintTop_toBottomOf="@+id/text_picked_for_you2"  />

        <View
                android:id="@+id/divider_picked_for_you"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/text_picked_for_you"
                app:layout_constraintStart_toStartOf="@+id/text_picked_for_you"/>


        <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="@+id/accounts"
                app:layout_constraintTop_toBottomOf="@+id/text_picked_for_you3" android:layout_marginTop="16dp" />

        <TextView
                android:text="Logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_logout"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@+id/settings"
                app:layout_constraintStart_toStartOf="@+id/settings" android:paddingStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <View
                android:id="@+id/divider_logout"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/text_logout"
                app:layout_constraintStart_toStartOf="@+id/text_logout"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Bank ABC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
